{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mens Body SVG Configuration",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The unique identifier for the variant."
      },
      "suitColor": {
        "type": "string",
        "pattern": "^#[0-9a-fA-F]{6}$",
        "description": "Hex color code for the suit.",
        "default": "#000000"
      },
      "shirtColor": {
        "type": "string",
        "pattern": "^#[0-9a-fA-F]{6}$",
        "description": "Hex color code for the shirt.",
        "default": "#ffffff"
      },
      "lapelColor": {
        "type": "string",
        "pattern": "^#[0-9a-fA-F]{6}$",
        "description": "Hex color code for the lapels.",
        "default": "#ffffff"
      },
      "collarColor": {
        "type": "string",
        "pattern": "^#[0-9a-fA-F]{6}$",
        "description": "Hex color code for the collar.",
        "default": "#ffffff"
      },
      "tieType": {
        "type": "string",
        "enum": ["bowtie", "tie"],
        "description": "Type of tie to display.",
        "default": "tie"
      },
      "pocketSquareType": {
        "type": "string",
        "enum": ["type1", "type2", "emptypocket", "none"],
        "description": "Variation of the pocket square.",
        "default": "none"
      }
    },
    "required": ["id"]
  }
}
